var pi:= 0.0

#entrada
imprima"Digite a sua altura: "
altura = leia_real
imprima"Digite seu sexo: "
sexo = leia_texto

#processamento
se sexo == "M" ou sexo == "m" entao
  pi := (72.5 * altura) - 58
  escreva"O peso ideal para o sexo masculino é {pi}"
  senaose sexo == "F" ou sexo == "f" entao
   pi := (62.1 * altura) - 44.7
   escreva"O peso ideal feminino é {pi}"
    senao
      escreva"Digite F ou M para poder realizar o calculo"
  fim

#saida